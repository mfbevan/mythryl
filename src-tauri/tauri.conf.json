{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mythryl",
  "version": "0.1.0",
  "identifier": "com.mythryl.app",
  "build": {
    "beforeDevCommand": "pnpm with-env next dev --turbo",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm tauri:build:next",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "Mythryl",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
